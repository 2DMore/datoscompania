<div class="container d-flex justify-content-center align-items-center" style="min-height: 90vh">
    <div class="card p-4 shadow-lg" style="max-width: 400px; width: 100%; background-color: #0d1b2a; color: #e0e1dd; border: 1px solid #415a77;">
        <h3 class="text-center mb-4">Bienvenido</h3>

        <% if flash[:alert] %>
        <div class="alert alert-danger text-dark bg-danger-subtle"><%= flash[:alert] %></div>
        <% end %>

        <%= form_with url: session_path, scope: :user,html:{class:"mt-2"}, data: {turbo: false} do |form| %>
        <div class="mb-3">
            <%= form.label :email_address, "Correo electrónico", class: "form-label text-light" %>
            <%= form.email_field :email_address,class: "form-control border-light",required: true, autofocus: true, autocomplete: "username", placeholder: "abc@gmail.com", value: params[:email_address] %>
        </div>
        <div class="mb-3">
            <%= form.label :password, "Contraseña", class: "form-label text-light" %>
            <%= form.password_field :password, class: "form-control border-light", required: true, autocomplete: "current-password", placeholder: "Ingresa la contraseña", maxlength: 72 %>
        </div>
        <div class="d-grid">
            <%= form.submit "Ingresar", class:"btn btn-primary" %>
        </div>
        <% end %>

        <div class="text-center mt-3">
            <!--<%= link_to "¿Olvidaste la contraseña?", new_password_path, class: "link-light" %>-->
            <%= link_to "Registrarse", new_registration_path, class: "link-light"%>
        </div>
    </div>
</div>